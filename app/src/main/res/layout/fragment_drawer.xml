<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitePrimary"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/userInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/blueTertiary"
            android:paddingStart="@dimen/spacing_medium"
            android:paddingEnd="@dimen/spacing_nano"
            android:paddingBottom="@dimen/spacing_double">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/spacing_double2"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:background="@drawable/circle"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_icon_user"
                android:visibility="visible" />

            <TextView
                android:id="@+id/userImageText"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/spacing_double2"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:background="@drawable/circle"
                android:gravity="center"
                android:textColor="@color/blackPrimary"
                android:textSize="35sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:text="M" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/userImage"
                android:layout_toStartOf="@+id/backButton"
                android:layout_toEndOf="@+id/userImage"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/whitePrimary"
                android:textSize="24sp"
                tools:text="User name" />

            <TextView
                android:id="@+id/userDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_marginStart="@dimen/spacing_micro"
                android:layout_toEndOf="@+id/userImage"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/grayTertiary"
                android:textSize="16sp"
                tools:text="9999999999" />

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/spacing_normal"
                android:src="@drawable/ic_icon_back" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/redSecondary" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whitePrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_double2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_nav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_micro"
                    android:drawableEnd="@drawable/ic_icon_home"
                    android:drawableTint="@color/blackPrimary"
                    android:gravity="start"
                    android:padding="@dimen/spacing_medium"
                    android:text="@string/home"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayTertiary" />

                <TextView
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_micro"
                    android:drawableEnd="@drawable/ic_icon_feedback"
                    android:gravity="start"
                    android:padding="@dimen/spacing_medium"
                    android:text="@string/feedback_no_colon"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayTertiary" />

                <TextView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_micro"
                    android:drawableEnd="@drawable/ic_icon_info"
                    android:gravity="start"
                    android:padding="@dimen/spacing_medium"
                    android:text="@string/about"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayTertiary" />

                <TextView
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_micro"
                    android:drawableEnd="@drawable/ic_icon_share"
                    android:gravity="start"
                    android:padding="@dimen/spacing_medium"
                    android:text="@string/share_app"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayTertiary" />

                <TextView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_micro"
                    android:drawableEnd="@drawable/ic_icon_exit"
                    android:gravity="start"
                    android:padding="@dimen/spacing_medium"
                    android:text="@string/logout"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayTertiary" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</ScrollView>